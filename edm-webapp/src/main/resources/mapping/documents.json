{
  "analysis":{
    "analyzer":{
      "edm_autocomplete":{
        "type":"custom",
        "tokenizer":"standard",
        "filter":[
          "lowercase",
          "autocomplete_filter"
        ]
      },
      "edm_analyzer_french":{
        "type":"custom",
        "tokenizer":"whitespace",
        "filter":[
          "lowercase",
          "asciifolding",
          "worddelimiter",
          "french_elision",
          "french_stop",
          "french_stemmer"
        ]
      }
    },
    "filter":{
      "autocomplete_filter":{
        "type":"edge_ngram",
        "min_gram":2,
        "max_gram":20
      },
      "french_elision":{
        "type":"elision",
        "articles":[
          "l",
          "m",
          "t",
          "qu",
          "n",
          "s",
          "j",
          "d",
          "c",
          "jusqu",
          "quoiqu",
          "lorsqu",
          "puisqu"
        ]
      },
      "worddelimiter":{
        "type":"word_delimiter",
        "catenate_words":true,
        "catenate_numbers":true,
        "split_on_numerics":false
      },
      "french_stop":{
        "type":"stop",
        "stopwords":"_french_"
      },
      "french_stemmer":{
        "type":"stemmer",
        "language":"light_french"
      }
    }
  }
}